{
  "name": "fiction-cms",
  "version": "1.0.0",
  "description": "A modern fiction CMS with Vite+React frontend and Hono backend",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"pnpm --filter backend dev\" \"pnpm --filter frontend dev\"",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "lint": "pnpm --filter \"*\" lint",
    "type-check": "pnpm --filter \"*\" type-check"
  },
  "keywords": [
    "fiction",
    "cms",
    "vite",
    "react",
    "hono",
    "typescript"
  ],
  "author": "Bill Toshiaki Stark",
  "license": "MIT",
  "devDependencies": {
    "@types/gh-pages": "^6.1.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "concurrently": "^9.2.1",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "typescript": "^5.9.2"
  }
}